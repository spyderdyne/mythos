# master-commander.sh
#
# A script to pull (WGET) scripts from the master Medusa node and execute them locally, making
# sure not to execute any of them twice.  Scripts on the master node file server will append
# a timestamp form $date to ensure uniqueness and to track slave executions.

#source ~/mythos_environment.dat

sleep $[ ( $RANDOM % 600 )  + 1 ]s #added a random sleep timer to keep slaves from flooding the server all at once

#wget -H -r -O $LOCATION http://<%= @medusa_master_ip %>/medusa/scripts/*
(cd remote-scripts/ && wget -r --no-parent --reject "index.html*" http://<%= @medusa_master_ip %>/medusa/scripts/)

chmod +x remote-scripts/<%= @medusa_master_ip %>/medusa/scripts/*.sh

for each in remote-scripts/<%= @medusa_master_ip %>/medusa/scripts/*.sh
  do
    [ -e $each.bak ] && rm -rf remote-scripts/<%= @medusa_master_ip %>/medusa/scripts/$each
    bash remote-scripts/<%= @medusa_master_ip %>/medusa/scripts/$each
    mv remote-scripts/<%= @medusa_master_ip %>/medusa/scripts/$each remote-scripts/<%= @medusa_master_ip %>/medusa/scripts/$each.bak
  done