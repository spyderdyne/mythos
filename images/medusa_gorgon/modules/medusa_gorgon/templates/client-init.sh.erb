import time
timestr = time.strftime("%Y%m%d-%H%M%S")

sleep $[ ( $RANDOM % 600 )  + 1 ]s

#connect new client machines to the server for registration on spawn
/usr/bin/phoronix-test-suite phoromatic.connect

#set random hostname
#!/bin/bash

HOST=`perl -e 'open IN, "</usr/share/dict/words";rand($.) < 1 && ($n=$_) while <IN>;$n=~s/'\''//g;print lc($n)'`
DOMAIN=`perl -e 'open IN, "</usr/share/dict/words";rand($.) < 1 && ($n=$_) while <IN>;$n=~s/'\''//g;print lc($n)'`
echo "New selected hostname is $HOST.$DOMAIN$timestr.com..."

# Search/Repace hosts temp construct (template simply has strings HOST and DOMAIN in appropriate spots)
cp /etc/hosts.template /etc/hosts
sed -i 's/HOST/'$HOST'/g' /etc/hosts
sed -i 's/DOMAIN/'$DOMAIN$timestr'/g' /etc/hosts

# Create a new hostname file
echo "$HOST.$DOMAIN$timestr.com" > /etc/hostname

#create reports directory on master
ssh medusa_gorgon 'mkdir -p /opt/trunk/mythos/seshat/clients/$HOST.$DOMAIN$timestr/'

#insert registration time to results directory
registered=`date +%y%m%d%H%M%S`
data_file=/opt/trunk/mythos/seshat/clients/$HOST.$DOMAIN$timestr/$HOST.$DOMAIN$timestr.dat

#gather stats
cat /etc/issue >> $data_file
uname -r >> $data_file
free -m >> $data_file
cat /proc/cpuinfo >> $data_file

#log to server
ssh medusa_gorgon "/sbin/cat >>$data_file" <$data_file

