source ../../set_environment.sh
hosts_list='/opt/trunk/mythos/medusa/discovery/discovered_hosts.txt'
#HOSTNAME=$(/bin/echo $HOSTNAME) #THIS DOESNT DO ANYTHING...

#Discover local (private) hosts by web socket
until nmap -sL -p 80 -oN /opt/trunk/mythos/medusa/discovery/discovered_hosts.txt 192.168.0.0/24

#Call address parser to provide final hosts list
/opt/trunk/mythos/medusa/discovery/address_parser.sh

#Send local hosts list result to gorgon server
until /usr/bin/scp $hosts_list medusa_gorgon:/opt/trunk/mythos/seshat/clients/$HOSTNAME/discovered_hosts.txt
  do
    sleep 10
  done